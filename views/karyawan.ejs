<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Karyawan</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body class="d-flex flex-row">
    <!-- Sidebar -->
    <%- include('_sidebar', {active: 'karyawan'}) %>
    <div class="flex-grow-1">
      <!-- Navbar -->
      <%- include('_navbar', {title: 'List Karyawan', search, link: '/karyawan'}) %>

      <!-- TABLE -->
      <div class="container mt-3">
        <button class="btn btn-primary" onclick="window.location.href='/karyawan/add'">Tambah Karyawan</button>
        <table class="table mt-3">
          <thead>
            <th>No</th>
            <th class="align-middle">
              Nama
              <span
                class="ms-2"
                style="cursor: pointer"
                onclick="window.location.href='/karyawan?nama=<%= nama == 'ASC' ? 'DESC' : 'ASC' %><%= search ? ('&search=' + search) : '' %>'"
              >
                <i class="bi <%= nama == 'ASC' ? 'bi-sort-alpha-down' : 'bi-sort-alpha-up' %>"></i>
              </span>
            </th>
            <th>Posisi</th>
            <th>Tanggal Mulai</th>
            <th>Nomor Telepon</th>
            <th class="align-middle">
              Gaji
              <span
                class="ms-2"
                style="cursor: pointer"
                onclick="window.location.href='/karyawan?gaji=<%= gaji == 'ASC' ? 'DESC' : 'ASC' %><%= search ? ('&search=' + search) : '' %>'"
              >
                <i class="bi <%= gaji == 'ASC' ? 'bi-sort-numeric-down' : 'bi-sort-numeric-up' %>"></i>
              </span>
            </th>
            <th>Action</th>
          </thead>
          <tbody>
            <% karyawan.forEach((item, index) => { %>
            <tr>
              <td class="align-middle"><%= index + 1 %></td>
              <td class="align-middle"><%= item.nama %></td>
              <td class="align-middle"><%= item.posisi %></td>
              <td class="align-middle"><%= formatDate(item.tanggal_mulai) %></td>
              <td class="align-middle"><%= item.nomor_telepon %></td>
              <td class="align-middle"><%= formatRupiah(item.gaji) %></td>
              <td class="align-middle">
                <button class="btn btn-success" onclick="window.location.href='/karyawan/<%= item.id %>/edit'">
                  <i class="bi bi-pencil-square"></i>
                </button>
                <button class="btn btn-danger" onclick="window.location.href='/karyawan/<%= item.id %>/delete'">
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
