<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Karyawan</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- HERO -->
    <div class="px-3 py-5 text-center bg-danger">
      <h1 class="display-6 fw-bold text-white">List Karyawan</h1>
    </div>

    <!-- TABLE -->
    <div class="container mt-3">
      <button class="btn btn-primary" onclick="window.location.href='/karyawan/add'">Tambah Karyawan</button>
      <table class="table mt-3">
        <thead>
          <th>Id</th>
          <th>Nama</th>
          <th>Posisi</th>
          <th>Tanggal Mulai</th>
          <th>Nomor Telepon</th>
          <th>Gaji</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% karyawan.forEach(item => { %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.nama %></td>
            <td><%= item.posisi %></td>
            <td><%= formatDate(item.tanggal_mulai) %></td>
            <td><%= item.nomor_telepon %></td>
            <td><%= formatRupiah(item.gaji) %></td>
            <td>
              <button class="btn btn-success" onclick="window.location.href='/shirts/increase-stock/<%= item.id %>'">
                + stock
              </button>
              <button class="btn btn-warning" onclick="window.location.href='/shirts/decrease-stock/<%= item.id %>'">
                - stock
              </button>
              <button class="btn btn-danger" onclick="window.location.href='/shirts/delete/<%= item.id %>'">
                Delete
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
