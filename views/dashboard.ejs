<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shirt List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />

    <style>
      .custom-container {
        padding: 20px;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        width: 100%;
      }
    </style>
  </head>
  <body class="d-flex flex-row">
    <!-- Sidebar -->
    <%- include('_sidebar', { active: 'dashboard' }) %>
    <!-- Navbar -->
    <div class="flex-grow-1">
      <%- include('_navbar', {title: 'Data Pemasukan'}) %>
      <div class="custom-container">
        <div>
          <h2 style="font-size: 1.5rem; font-weight: 600">Hari Ini</h2>
          <canvas id="dailyChart"></canvas>
        </div>
        <div>
          <h2 style="font-size: 1.5rem; font-weight: 600">1 Minggu Terakhir</h2>
          <canvas id="weeklyChart"></canvas>
        </div>
        <div>
          <h2 style="font-size: 1.5rem; font-weight: 600">1 Bulan Terakhir</h2>
          <canvas id="monthlyChart"></canvas>
        </div>
        <div>
          <h2 style="font-size: 1.5rem; font-weight: 600">1 Tahun Terakhir</h2>
          <canvas id="annualyChart"></canvas>
        </div>
      </div>
    </div>

    <input value="<%= JSON.stringify(chartData) %>" type="hidden" id="chartData" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/public/formatChartData.js"></script>
    <script>
      const ctx = document.getElementById('dailyChart');
      const ctx2 = document.getElementById('weeklyChart');
      const ctx3 = document.getElementById('monthlyChart');
      const ctx4 = document.getElementById('annualyChart');
      const dailyData = formatDailyData(JSON.parse(document.getElementById('chartData').value).daily);
      const weeklyData = formatWeeklyData(JSON.parse(document.getElementById('chartData').value).weekly);
      const monthlyData = formatMonthlyData(JSON.parse(document.getElementById('chartData').value).monthly);
      const annualyData = formatAnnualyData(JSON.parse(document.getElementById('chartData').value).annually);

      // daily chart
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: dailyData.map((item) => item.label), // Correct .map usage
          datasets: [
            {
              label: 'Pemasukan',
              data: dailyData.map((item) => item.data), // Correct .map usage
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      // weekly chart
      new Chart(ctx2, {
        type: 'line',
        data: {
          labels: weeklyData.map((item) => item.label), // Correct .map usage
          datasets: [
            {
              label: 'Pemasukan',
              data: weeklyData.map((item) => item.data), // Correct .map usage
              borderWidth: 1,
              borderColor: '#ff0000',
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      // monthly chart
      new Chart(ctx3, {
        type: 'line',
        data: {
          labels: monthlyData.map((item) => item.label), // Correct .map usage
          datasets: [
            {
              label: 'Pemasukan',
              data: monthlyData.map((item) => item.data), // Correct .map usage
              borderWidth: 1,
              borderColor: '#d7ed11',
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      // annualy chart
      new Chart(ctx4, {
        type: 'line',
        data: {
          labels: annualyData.map((item) => item.label), // Correct .map usage
          datasets: [
            {
              label: 'Pemasukan',
              data: annualyData.map((item) => item.data), // Correct .map usage
              borderWidth: 1,
              borderColor: '#00ff62',
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });
    </script>
  </body>
</html>
