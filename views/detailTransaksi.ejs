<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Transaksi</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      .hero {
        background: linear-gradient(90deg, rgba(220, 53, 69, 1) 0%, rgba(255, 193, 7, 1) 100%);
      }
      .table thead {
        background-color: #f8f9fa;
      }
      .total-harga {
        font-size: 1.5rem;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <!-- HERO -->
    <div class="px-3 py-5 text-center hero">
      <h1 class="display-6 fw-bold text-white">Detail Transaksi</h1>
    </div>

    <div class="container mt-5">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title">Id Transaksi: <span class="badge bg-primary"><%= transaksi.id %></span></h2>
          <p class="card-text">Tanggal Transaksi: <%= formatDate(transaksi.tanggal, true) %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title">Detail Karyawan</h3>
          <p class="card-text">Nama: <%= transaksi.karyawan.nama %></p>
          <p class="card-text">Posisi: <%= transaksi.karyawan.posisi %></p>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title">Detail Barang</h3>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nama Barang</th>
                <th>Jumlah Barang</th>
                <th>Harga Barang</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% transaksi.detail.forEach(item => { %>
              <tr>
                <td><%= item.nama_barang %></td>
                <td><%= item.jumlah_barang %></td>
                <td><%= item.harga_barang.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' }) %></td>
                <td><%= item.total.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' }) %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card mb-4">
        <div class="card-body text-end">
          <h3 class="total-harga">
            Total Harga: <%= transaksi.total_harga.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' }) %>
          </h3>
        </div>
      </div>
    </div>
  </body>
</html>
