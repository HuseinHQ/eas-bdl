<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shirt List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <%- include('_navbar') %>

  <!-- HERO -->
  <div class="px-3 py-5 text-center bg-danger">
    <h1 class="display-6 fw-bold text-white">List of Shirts</h1>
  </div>

  <!-- TABLE -->
  <div class="container mt-3">
    <% if (info) { %>
      <div class="alert alert-danger text-danger">
        <%= info %>
      </div>
    <% } %>
    
    <button class="btn btn-primary" onclick="window.location.href='/shirts/add'">Add new shirt</button>
    <table class="table mt-3">
      <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Type</th>
        <th>Size</th>
        <th>Stock</th>
        <th>Tag</th>
        <th>Action</th>
      </thead>
      <tbody>
        <% shirts.forEach(shirt => { %>
          <tr>
            <td><%= shirt.id %></td>
            <td><%= shirt.name %></td>
            <td><%= shirt.type %></td>
            <td><%= shirt.size %></td>
            <td><%= shirt.stock %></td>
            <td><%= shirt.tagName %></td>
            <td>
              <button class="btn btn-success" onclick="window.location.href='/shirts/increase-stock/<%= shirt.id %>'">+ stock</button>
              <button class="btn btn-warning" onclick="window.location.href='/shirts/decrease-stock/<%= shirt.id %>'">- stock</button>
              <button class="btn btn-danger" onclick="window.location.href='/shirts/delete/<%= shirt.id %>'">Delete</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>