<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Shirt</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <!-- HERO -->
  <div class="px-3 py-5 text-center bg-danger">
    <h1 class="display-6 fw-bold text-white">Add new shirt</h1>
  </div>

  <div class="container mt-5">
    <% if (errors) { %>
    <div class="alert alert-danger text-danger">
      <%= errors.split(',').join(', ') %>
    </div>
    <% } %>

    <form action="/shirts/add" method="post">
      <div class="mb-3">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" placeholder="e.g: Kaos Polo Garis">
      </div>
  
      <div class="mb-3">
        <label for="type">Type</label>
        <select class="form-select" name="type">
          <option selected disabled>-- Select Type --</option>
          <option value="Casual">Casual</option>
          <option value="Dres">Dress</option>
          <option value="T-Shirt">T-Shirt</option>
          <option value="Polo">Polo</option>
        </select>
      </div>
  
      <div class="mb-3">
        <label for="size">Size</label>
        <select class="form-select" name="size">
          <option selected disabled>-- Select Size</option>
          <option value="S">S</option>
          <option value="M">M</option>
          <option value="L">L</option>
          <option value="XL">XL</option>
        </select>
      </div>
  
      <div class="mb-3">
        <label for="stock">Stock</label>
        <input class="form-control" type="number" name="stock" placeholder="e.g: 12">
      </div>
  
      <div class="mb-3">
        <label for="TagId">Tag</label>
        <select class="form-select" name="TagId">
          <option selected disabled>-- Select Tag --</option>
          <% tags.forEach(tag => { %>
            <option value="<%= tag.id %>"><%= tag.name %></option>
          <% }) %>
        </select>
      </div>
  
      <button class="btn btn-primary" type="submit">Add Shirt</button>
    </form>
  </div>
</body>
</html>