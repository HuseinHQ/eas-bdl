<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Karyawan</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- HERO -->
    <div class="px-3 py-5 text-center bg-danger">
      <h1 class="display-6 fw-bold text-white">Edit Karyawan</h1>
    </div>

    <div class="container mt-5">
      <% if (errors) { %>
      <div class="alert alert-danger text-danger"><%= errors.split(',').join(', ') %></div>
      <% } %>

      <form action="/karyawan/<%= karyawan.id %>/edit" method="post">
        <input type="hidden" name="id" value="<%= karyawan.id %>" />
        <input type="hidden" name="tanggal_mulai" value="<%= karyawan.tanggal_mulai %>" />

        <div class="mb-3">
          <label for="nama">Nama</label>
          <input value="<%= karyawan.nama %>" class="form-control" type="text" name="nama" placeholder="Budi" />
        </div>

        <div class="mb-3">
          <label for="nomor_telepon">Nomor Telepon</label>
          <input
            value="<%= karyawan.nomor_telepon %>"
            class="form-control"
            type="text"
            name="nomor_telepon"
            placeholder="081..."
          />
        </div>

        <div class="mb-3">
          <label for="gaji">Gaji</label>
          <input value="<%= karyawan.gaji %>" class="form-control" type="number" name="gaji" placeholder="4200000" />
        </div>

        <div class="mb-3">
          <label for="posisi">Posisi</label>
          <select class="form-select" name="posisi">
            <option selected disabled>-- Select Tag --</option>
            <% posisi.forEach(item => { %>
              <option value="<%= item %>" <%= karyawan.posisi === item ? "selected" : "" %>><%= item %></option>
            <% }) %>
          </select>
        </div>

        <button class="btn btn-primary" type="submit">Kirim</button>
      </form>
    </div>
  </body>
</html>
