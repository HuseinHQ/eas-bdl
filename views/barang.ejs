<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List Barang</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- HERO -->
    <div class="px-3 py-5 text-center bg-danger">
      <h1 class="display-6 fw-bold text-white">List Barang</h1>
    </div>

    <!-- TABLE -->
    <div class="container mt-3">
      <button class="btn btn-primary" onclick="window.location.href='/barang/add'">Tambah Barang</button>
      <table class="table mt-3 items-center">
        <thead>
          <th>Id</th>
          <th>Nama</th>
          <th>Kategori</th>
          <th>Harga</th>
          <th class="text-center">Stok</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% barang.forEach(item => { %>
          <tr>
            <td class="align-middle"><%= item.id %></td>
            <td class="align-middle"><%= item.nama %></td>
            <td class="align-middle"><%= item.kategori %></td>
            <td class="align-middle"><%= formatRupiah(item.harga) %></td>
            <td class="align-middle text-center"><%= item.stok %></td>
            <td class="align-middle">
              <button class="btn btn-success" onclick="window.location.href='/barang/<%= item.id %>/edit'">
                <i class="bi bi-pencil-square"></i>
              </button>
              <button class="btn btn-danger" onclick="window.location.href='/barang/delete/<%= item.id %>'">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
